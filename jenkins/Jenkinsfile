pipeline {
 agent any
 stages {
        stage("Build") {
            steps {
                sh 'composer install'
                sh 'cp .env.example .env'
                sh 'php artisan key:generate'
                sh 'npm install'
                sh 'npm run prod'
            }
        }
        stage("Unit test") {
            steps {
                sh 'php artisan test'
            }
        }
        stage("Deliver") {
            steps {
                sh 'php artisan serve --port=3000'
            }
        }
        stage("Deploy") {
            steps {
                sh 'ssh root@51.222.32.200 "cd /var/www/html/laravel && git pull origin master"'
            }
        }
   }
}